define info
Usage: make -f extras [OPTION]
OPTIONS:
	GNOME
	KDE
	XFCE
endef

export info

all:
	@echo "$$info"

sudo-required:
	@if [ $$UID != "0" ]; then\
		echo "Please use sudo or run as root";\
		exit 1;\
	fi

GNOME: sudo-required
	@pacman -S --needed --noconfirm xorg gnome
	@systemctl enable gdm

KDE: sudo-required
	@pacman -S --needed --noconfirm xorg plasma kde-applications
	@systemctl enable sddm

XFCE: sudo-required
	@pacman -S --needed --noconfirm xorg xfce4 xfce4-goodies gvfs lightdm lightdm-gtk-greeter
	@systemctl enable lightdm
